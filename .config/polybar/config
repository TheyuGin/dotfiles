blacklist-0 = num lock

format-prefix = " "

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.base01}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#cc6666}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted

[module/i3]
type = internal/i3
