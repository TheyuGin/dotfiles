[bar/main]
monitor = ${env:MONITOR:HDMI-0}
width = 100%
height = 20
fixed-center = false
bottom = true

background = ${colors.base01}
foreground = ${colors.base04}

module-margin-left = 1
module-margin-right = 2

font-0 = monospace:pixelsize=12;3
font-1 = Sarasa Term J:pixelsize=12;3
font-2 = Sarasa Term K:pixelsize=12;3
font-3 = Sarasa Term CL:pixelsize=12;3
font-4 = Sarasa Term TC:pixelsize=12;3
font-5 = Sarasa Term SC:pixelsize=12;3
font-6 = Sarasa Term HC:pixelsize=12;3

modules-left = i3
modules-right = mpd filesystem pulseaudio xkeyboard date powermenu

tray-position = right
tray-padding = 2

wm-restack = i3

;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/secondary]
inherit = bar/main
monitor = ${env:MONITOR:DVI-I-0}
tray-position = none
modules-right = xkeyboard date

[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%

[module/xkeyboard]
