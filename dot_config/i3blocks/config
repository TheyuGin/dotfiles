[mediaplayer]
color="#f8f8f2"
command=./scripts/mediaplayer
instance='spotify'
interval=1
signal=10

[cpu_util_detailed]
command=./scripts/cpu_util_detailed
label=CPU
markup=pango
interval=-2

[memory]
command=./scripts/memory
label=MEM
interval=5

[memory]
command=./scripts/memory
label=SWAP
interval=5
instance=swap

[pulsevolume]
AUDIO_HIGH_SYMBOL=
AUDIO_MED_SYMBOL=
AUDIO_MUTED_SYMBOL=
DEFAULT_COLOR="#f8f8f2"
MUTED_COLOR="#44475A"

command=./scripts/pulsevolume
interval=once
signal=1
USE_ALSA_NAME=1

[keymap]
color="#f8f8f2"
label=⌨
command=xkb-switch -W
interval=persist

[time]
color="#f8f8f2"
command=date +'%T %Y/%m/%e'
interval=1

